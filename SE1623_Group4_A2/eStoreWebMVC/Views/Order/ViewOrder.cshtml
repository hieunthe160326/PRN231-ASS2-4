@using eStoreAPI.Models;
@model IEnumerable<Order>;

@{
    ViewData["Title"] = "List Page";
}

<h2>Orders</h2>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Member ID</th>
            <th>Order Date</th>
            <th>Required Date</th>
            <th>Shipped Date</th>
            <th>Freight</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.MemberId</td>
                <td>@order.OrderDate</td>
                <td>@order.RequiredDate</td>
                <td>@order.ShippedDate</td>
                <td>@order.Freight</td>
                <td>
                    <a href="/customer/delete/@order.OrderId" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>