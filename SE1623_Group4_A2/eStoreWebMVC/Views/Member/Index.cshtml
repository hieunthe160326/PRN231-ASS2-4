@using eStoreAPI.Models;
@model IEnumerable<Member>;

@{
    ViewData["Title"] = "List Page";
}

<a href="/customer/add" class="btn btn-primary">
    <i class="fa fa-plus"></i> Create
</a>
<hr />

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Company Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberId</td>
                <td>@item.Email</td>
                <td>@item.CompanyName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Password</td>
                <td>
                    <a href="/customer/edit/@item.MemberId" class="btn btn-success">
                        <i class="fa fa-pen"></i>
                    </a>
                    <a href="/customer/delete/@item.MemberId" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>